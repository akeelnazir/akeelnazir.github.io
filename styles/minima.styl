.minima
  font-size 1.25em
  .clear
    clear both

  .left
    float left

  .right
    float right

  i
    margin-right 10px

  .wrapper
    padding 20px 0
    margin 0 auto

  .wrapper > header
    margin 0 auto
    width 940px
    position relative

    h1
      margin-bottom 0
      display block
      width 221px
      height 43px
      background url('/assets/images/minima/MinimaLogo.jpg') no-repeat
      text-indent -9999em
    h5
      margin-top 10px
      display block
      width 129px
      height 10px
      background #fff url('/assets/images/minima/MinimaTagLine.jpg') 0 0 no-repeat
      text-indent -9999em

    nav
      position absolute
      right 0
      top 0

      ul
        list-style-type: none

        li
          display: block
          float: left
          width 83px
          height 81px
          text-align center
          margin-top -30px

          a
            padding-top 30px
            width 100%
            height 100%
            display block
            text-transform uppercase
            text-decoration none
            font-size 14px
            color #585858

          a:hover
            background #ff61a0
            color white

  section
    width 940px
    margin 0 auto
    overflow hidden

    > header
      font-size 1.25em
      font-family 'Helvetica Neue', Arial
      font-weight bold
      color #555555
      text-transform uppercase
      letter-spacing .18em
      margin 2.5em 0 1.5em 0
      border-bottom 1px solid #bbbbbb
      padding-bottom 1em

    ul.pic-gallery
      list-style-type: none
      padding 0
      margin 0
      overflow hidden

      li
        display: block
        float: left
        margin-right 18px

        div
          font-family 'Lucida Grande', Arial
        
        div.name
          color #555555
          margin-top 20px

        div.type
            color pink
            font-size 12px
            font-style italic

      li:last-child
        margin 0
      
    article:nth-child(3n+1)
      margin-right 0

    article
      width 30%
      float left
      margin-right 5%
      margin-bottom 20px

      header
        text-transform none
        color #777777
        letter-spacing normal
        font-weight bold
        font-size 1.25em

      p
        color #777777
        line-height 1.5em
        font-size 1.15em


    .hero-unit
      margin-top 80px
      text-align center

    .slider
      position relative

      > div.nav
        position absolute
        width 82px
        height 81px
        background #555555 url('/assets/images/minima/slider-arrow.png') no-repeat 26px 15px
        top 40%
        padding 0

      .prev
        left 0

      .next
        right 0
        -webkit-transform rotate(180deg)
        -moz-transform rotate(180deg)
        -ms-transform rotate(180deg)
        -o-transform rotate(180deg)
        transform rotate(180deg)

      a
        display block
        width 100%
        height 100%
        text-indent -9999em

      .viewport
        height 308px

        ul
          list-style-type none
          text-align center
          margin 0
          padding 0
          li
            overflow hidden

    h2, h3
      display block
      height 51px
      width 777px
      background url('/assets/images/minima/hero-h2.jpg') no-repeat
      margin 0 auto
      margin-top 1em
      text-indent -9999em

    h3
      background url('/assets/images/minima/hero-h3.jpg') no-repeat
      height 50px
      width 443px

  footer
    background #555555
    overflow hidden
    color white
    margin-top 2em
    padding-bottom 2em

    .wrapper
      width 940px
      margin 0 auto
      margin-bottom 1em
      overflow hidden

    section:nth-child(3n+3)
      margin-right 0

    section
      width 30%
      float left
      margin-right 5%

      header
        color #ff61a0
        border-bottom none
        margin 30px 0 0 0
        font-size 1em

    section#contact
      div
        margin-bottom 1em
      a
        color white
        text-decoration none

      div.social
        ul
          list-style-type: none
          padding 0
          margin 0
          margin-top 1em

          li
            display block
            float left
            width 43px
            height 43px
            margin-right 16px
            background url(/assets/images/minima/social-sprite.png)
            text-indent -9999em

          .dribbble
            background-position -48px 0

          .twitter
            background-position -95px 0  
            
          .rss
            background-position -143px 0   

    section#twitter
      ul
        list-style-type: none
        padding 0
        margin 0

        li div
          margin-bottom 1em
          width 88%

          .by
            font-weight bold
            font-style italic
          .when
            display block
            font-size small
            font-style italic
            margin-top 5px

    section#posts
      ul
        list-style-type: none
        padding 0
        margin 0
        overflow hidden

        li
          margin-bottom 1em

          div
            width 89%
            margin-bottom 1em

  div.copyright
    background white
    color #777777
    font-size small
    width 940px
    margin 0 auto
    margin-top 2em
    margin-bottom 2em


