.nav-main
  position fixed
  top 0
  bottom 0
  width 250px
  background #FFF
  text-align center
  padding-top 10%
  z-index 100
  -webkit-transition all 0.5s
  -moz-transition all 0.5s
  -ms-transition all 0.5s
  transition all 0.5s
  
  &.fixed-true
    left 0

  &.fixed-false
    left -250px

  .sep
    height 1px
    width 20px
    background #ddd
    margin 40px auto

  ul 
    padding 0
    list-style-type none

    li 
      a
        position relative
        display block
        font-size 15px
        line-height 15px
        letter-spacing 3px
        color #757575
        text-transform uppercase
        text-decoration none
        margin-bottom 30px
        -webkit-font-smoothing antialiased
        -webkit-transition color 0.3s ease-out
        -moz-transition color 0.3s ease-out
        -o-transition color 0.3s ease-out
        -ms-transition color 0.3s ease-out
        transition color 0.3s ease-out

      a:hover
        color #0fe9bd
        -webkit-transition color 0.3s ease-out
        -moz-transition color 0.3s ease-out
        -o-transition color 0.3s ease-out
        -ms-transition color 0.3s ease-out
        transition color 0.3s ease-out

  div.social
    position absolute
    bottom 0
    left 25%

    ul
      overflow hidden

      li 
        width 22px
        height 20px
        margin 0 1em
        float left
        
        a
          color #757575
          -webkit-font-smoothing antialiased
          -webkit-transition color 0.3s ease-out
          -moz-transition color 0.3s ease-out
          -o-transition color 0.3s ease-out
          -ms-transition color 0.3s ease-out
          transition color 0.3s ease-out
          cursor pointer

        a:hover
          color #0fe9bd
          -webkit-transition color 0.3s ease-out
          -moz-transition color 0.3s ease-out
          -o-transition color 0.3s ease-out
          -ms-transition color 0.3s ease-out
          transition color 0.3s ease-out

