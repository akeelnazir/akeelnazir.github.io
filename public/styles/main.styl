@font-face
  font-family 'Titillium'
  src url('/assets/fonts/titilliumtext22l002-webfont.eot') 
  src local('&#9786; '), url('/assets/fonts/titilliumtext22l002-webfont.woff') format('woff'), url('/assets/fonts/titilliumtext22l002-webfont.ttf') format('truetype'), url('/assets/fonts/titilliumtext22l002-webfont.svg#webfontNPk0Fk0p') format('svg')
  font-weight: normal
  font-style: normal

@font-face
  font-family: 'AllerRegular' 
  src url('/assets/fonts/aller_rg-webfont.eot') 
  src local('&#9786; '),url('/assets/fonts/aller_rg-webfont.woff') format('woff'), url('/assets/fonts/aller_rg-webfont.ttf') format('truetype'),url('/assets/fonts/aller_rg-webfont.svg#webfontAuJi9W9g') format('svg') 
  font-weight normal 
  font-style normal

*, *:after, *::before
  -moz-box-sizing border-box
  box-sizing border-box

body
  background url('/assets/images/paper.jpg')
  color #586264
  color rgba(0,0,0,0.8)
  font 62.5%/1.5 AllerRegular, "Helvetica Neue", Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility

.wrap
  overflow hidden

h1, h2, h3, h4, h5, h6, header
  font-family Titillium,"Helvetica Neue",Helvetica,Arial,sans-serif

ul li, ol li 
  margin .6em 0 .6em 0

.header-fixed
  position fixed !important
  top 0
  width 100%
  z-index 999
