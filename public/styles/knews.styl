#image_gallery

  .panel-heading
    h4.panel-title

      a.heading
        padding 0 15px

  ul.gallery

    li.image
      position relative

      img
        max-height 300px

      &:not(:hover)
        div.bottom-panel
          display none

      &:hover
        div.bottom-panel
          position absolute
          left 0
          bottom 0px
          width 100%
          background rgba(255, 255, 255, 0.75)
          padding .75em 0

          span.caption
            display inline-block
            padding-left 10px
            width 85%
            font-size 1.5em

          div.description
            padding 10px
            font-size 1.25em